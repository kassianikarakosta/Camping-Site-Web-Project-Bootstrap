<script>
    function showDescription(id, imageUrl) {
        // Hide all descriptions
        document.querySelectorAll('.description').forEach(description => {
            description.classList.remove('active-description');
        });

        // Show the selected description
        document.getElementById(id).classList.add('active-description');

        // Change the background image
        document.getElementById('pictureholder').style.backgroundImage = 'url(' + imageUrl + ')';
    }
</script>